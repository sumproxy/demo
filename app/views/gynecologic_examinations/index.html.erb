<h1>Список гинекологических обследований</h1>

<table>
  <tr>
    <th>Ф.И.О.</th>
    <th>Дата</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gyn_exams.each do |gyn_exam| %>
  <tr class="<%= cycle('', 'alt') %>">
    <td><%= link_to format_name(gyn_exam.patients.first), patient_path(gyn_exam.patients.first) %></td>
    <td><%= l gyn_exam.created_at, :format => :long %></td>
    <td><%= link_to 'Показать', gyn_exam %></td>
    <td><%= link_to 'Редактировать', edit_gynecologic_examination_path(gyn_exam) %></td>
    <td><%= link_to 'Удалить', gyn_exam, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>