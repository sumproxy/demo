<h1>Список пациентов</h1>

<table>
  <tr>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>Отчество</th>
    <th>Дата рождения</th>
    <th colspan="3"></th>
  </tr>

<% @patients.each do |patient| %>
  <tr class="<%= cycle('', 'alt') %>">
    <td><%= patient.last_name %></td>
    <td><%= patient.first_name %></td>
    <td><%= patient.patronymic %></td>
    <td><%= patient.dob %></td>
    <td><%= link_to 'Показать', patient %></td>
    <td><%= link_to 'Редактировать', edit_patient_path(patient) %></td>
    <td><%= link_to 'Удалить', patient, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>

<br />

