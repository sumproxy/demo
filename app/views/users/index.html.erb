<h1>Список пользователей</h1>
<% if notice %>
  <p id="notice" class="noprint"><%= notice %></p>
<% end %>
<table>
  <tr>
    <th>Логин</th>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>Отчество</th>
    <th>Администратор</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle('', 'alt') %>">
    <td><%= user.login %></td>
    <td><%= user.last_name %></td>
    <td><%= user.first_name %></td>
    <td><%= user.patronymic %></td>
    <td><%= user.is_root ? 'да' : 'нет' %></td>
    <td><%= link_to 'Показать', user %></td>
    <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
    <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>

<br />

<p class="noprint">
  <%= link_to 'Создать пользователя', new_user_path %>
</p>