<div>
  <% if flash[:alert] %>
    <p id="notice" class="noprint"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
  <fieldset>
    <legend>Введите логин и пароль</legend>
    <div>
      <label for="name" class="login">Логин:</label>
      <%= text_field_tag :login, params[:login] %>
    </div>
    <div>
      <label for="password" class="login">Пароль:</label>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div>
      <%= submit_tag "Войти" %>
    </div>
  </fieldset>
  <% end %>
</div>
